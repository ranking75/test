<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oppo.dao.IUserDao">
    <select id="findAll" resultType="User">
        select * from user;
    </select>
    <select id="save" parameterType="User">
        insert into user(email,username,password) values(#{email},#{username},#{password})
    </select>
    <select id="addUser" parameterType="User">
        insert into user(name,gender,age,address,qq,email,username,password,status,code) values(#{name},#{gender},
        #{age},#{address},#{qq},#{email},#{username},#{password},#{status},#{code})
    </select>
    <select id="login" parameterType="oppo.domain.User" resultType="User">
            select * from user where username =#{username} and password =#{password}
    </select>
    <select id="findByUsername" parameterType="java.lang.String" resultType="User">
            select * from user where username=#{username}
    </select>
    <select id="findBycode" parameterType="java.lang.String" resultType="User">
            select * from user where code=#{code}
    </select>
</mapper>